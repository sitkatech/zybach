{
    "entryFile": "./src/app.ts",
    "noImplicitAdditionalProperties": "silently-remove-extras",
    "controllerPathGlobs": [
        "./src/controllers/**/*controller.ts"
    ],

    "spec":{
        "specVersion": 3,
        "outputDirectory":"./src",
        "controllerPathGlobs": [
            "./src/controllers/**/*controller.ts"
        ],
        "securityDefinitions": {
            "api_key" :{
                "type": "apiKey",
                "name": "authorization",
                "in": "header"
            }
        }
    },
    "routes":{
        "routesDir": "./src/routes/generated",
        "authenticationModule": "./src/security/authentication.ts",
        "iocModule": "src/ioc"
    }
}